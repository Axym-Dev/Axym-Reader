@namespace Reader.Shared.BaseUI

@inherits LayoutComponentBase

@using Reader.Data.Storage
@using Reader.Shared.Layout
@using MudBlazor

<MudThemeProvider IsDarkMode="@(true)" Theme="CustomDarkTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>SchedulerApp</PageTitle>



<MudLayout>
    <Navbar />
    <MudMainContent>
        @Body
    </MudMainContent>
    <Footer />
    <SubFooter />
</MudLayout>


@code {

    MudTheme CustomDarkTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = "#020202",
                Secondary = "#080808",
                Tertiary = "101010"
            },
            PaletteDark = new PaletteDark()
            {
                Primary = "#020202",
                Secondary = "#080808",
                Tertiary = "101010"
            },
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Inter", "Roboto", "Helvetica", "Arial", "sans-serif" }
                }
            }
        };
}
